<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%-title%> | Smart Marketing</title>
    <link rel='shortcut icon' href="/img/favicon.ico" type="image/x-icon" />
    <!-- Fonts -->
    <link href='//fonts.googleapis.com/css?family=Great+Vibes' async='' rel='stylesheet' type='text/css' />
    <!-- Styling -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/header.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <%if (typeof css === 'object') {
    css.forEach(function (location) {%>
    <link href="<%-location%>" rel="stylesheet" /><%})}%>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="manage" data-ng-app="manage">
    <!-- Header -->
    <header class="navbar navbar-eathomely navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Smart Marketing</a>
                <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
            <%if (typeof navLeft === 'object') {%>
                <ul class="nav navbar-nav">
                <%navLeft.forEach(function (item) {%>
                    <li class="<%-item.active === true?'active':''%>"><a href="<%-item.href%>">
                        <%if (item.icon){%><i class="<%-item.icon%>"></i><%}%>
                        <%=item.title%>
                    </a></li>
                <%});%>
                </ul>
            <%}%>
            <%if (typeof user !== 'undefined') {%>
                <ul class="nav navbar-nav navbar-right" ng-controller="profileDropdown">
                    <li>
                        <a aria-expanded="true" data-toggle="dropdown" class="user-profile dropdown-toggle">
                            <%=user.firstName%> <%=user.lastName%>
                            <span class=" fa fa-angle-down"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-usermenu animated fadeInDown pull-right">
                            <li><a href="#/account">My Account</a></li>
                            <li><a href="#/invoices">Invoices</a></li>
                            <li><a ng-click="logout()"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            <%}%>
            <%if (typeof navRight === 'object') {%>
                <ul class="nav navbar-nav navbar-right">
                <%navRight.forEach(function (item) {%>
                    <li class="<%-item.active === true?'active':''%>"><a href="<%-item.href%>">
                        <%if (item.icon){%><i class="<%-item.icon%>"></i><%}%>
                        <%=item.title%>
                    </a></li>
                <%});%>
                </ul>
            <%}%>
            </div>
        </div>
    </header>
    <%- body %>
    <footer>
        <p class="copyright">&copy; Smart Marketing LTD.</p>
    </footer>
    <!-- Spinner Modal -->
    <div class="modal center fade bs-modal-sm" id="page-spinner">
        <div id="inner" class="modal-dialog modal-md" style="text-align:center">
            <div class="modal-body card-body">
                <i class="fa fa-spinner fa-spin fa-2x"></i>
            </div>
        </div>
    </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="/js/wow.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/angular.min.js"></script>
    <script src="/js/angular-route.js"></script>
    <%if (typeof javascript === 'object') {
    javascript.forEach(function (location) {%>
    <script src="<%-location%>"></script><%})}%>
</body>
</html>
